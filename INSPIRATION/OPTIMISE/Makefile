CC			=	gcc	
CFLAGS		=	-std=c99 

TARGET		=	optimize
OBJ			=	ga.c globals.c optimize.c brute.c
HEADERS		=	brute.h ga.h optimize.h	

GA			=	-DUSE_GA_OPTIMISE
BRUTE		=	-DUSE_BRUTE_SEARCH

WLAN		=	-DUSE_WLAN_MODEL
ITERATION 	=	-DMAX_ITERATION=100	
POP			=	-DMAX_POP=50
MAP_WIDTH	=	-DWIDTH=800
MAP_HEIGH	=	-DHEIGHT=800
MUTATIION	=	-DP_MUTAION=0.01
CROSSOVER	=	-DP_CROSSOVER=0.6
NUM_AP		=	-DNUM_AP=5

ga: 
	$(CC) $(CFLAGS)  -o $(TARGET) $(OBJ) $(HEADERS) $(GA) $(ITERATION) $(POP) $(MAP_WIDTH) $(MAP_HEIGH) $(MUTATIION) $(CROSSOVER) $(NUM_AP) $(WLAN) 

brute: $(BRUTE_OBJ)
	$(CC) $(CFLAGS)  -o $(TARGET) $(OBJ) $(HEADERS) $(BRUTE) $(MAP_WIDTH) $(MAP_HEIGH) $(WLAN)

clean:
	@rm *.o $(TARGET) RESULT
	
